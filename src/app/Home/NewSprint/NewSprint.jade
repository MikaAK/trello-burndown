button.btn--default((click)='modal.toggle()') Add Sprint

modal('[config]'='modal' title='New Sprint' '(onClose)'='cancel()' '(onOpen)'='getTeams()')
  .new-sprint
    .alert--error('*ngIf'='error') {{ error }}

    form.flex-form('(onSubmit)'='save()')
      .input-group
        label(for='boardId') Sprint ID
        input(
          type='text'
          name='boardId'
          placeholder='Enter sprint Trello board id'
          '[(ngModel)]'='newSprint.boardId'
          required
        )

      .input-group
        label(for='holidays') Holidays
        input(
          type='text'
          name='holidays'
          placeholder='Enter holiday dates sperated by ,'
          '[(ngModel)]'='newSprint.holidays'
        )

      .input-group
        label(for='team') Team
        select(
          name='team'
          '[(ngModel)]'='newSprint.team'
          required
        )
          option(disabled selected='selected') Select a team
          option('*ngFor'='#team of teams') {{ team.name }}

      form-save.pull-right('(onCancel)'='modal.toggle()')
