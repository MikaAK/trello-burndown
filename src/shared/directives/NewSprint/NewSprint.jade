button.btn--default((click)='modal.toggle()') Add Sprint

modal('[config]'='modal' title='New Sprint' '(onClose)'='cancel()' '(onOpen)'='newSprint.fetchTeams()')
  .new-sprint
    error-display('[errors]'='newSprint.errors | async')
    form.flex-form('(ngSubmit)'='save()' '[ngFormModel]'='newSprintForm')
      .input-group
        label(for='boardId') Sprint Board ID
        input(
          type='text'
          ngControl='boardId'
          placeholder='Enter sprint Trello board id'
        )

      .input-group
        label(for='holidays') Holidays
        input(
          type='text'
          ngControl='holidays'
          placeholder='Enter holiday dates sperated by ,'
        )

      .input-group
        label(for='team') Team
        select(ngControl='team')
          option(disabled value selected) Select a team
          option('*ngFor'='#team of newSprint.teams | async') {{ team.name }}

      form-save.pull-right('(onCancel)'='cancel()')
